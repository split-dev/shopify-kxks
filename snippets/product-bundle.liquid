              data-fancybox
              data-src="#size-chart{{ product.id }}"
              data-type="inline"
            >
              {{ block.settings.title | escape }}
            </a>
            {%
              render 'popup-size-chart',
              block: block,
              product_id: product.id,
            %}
          {% endif %}

